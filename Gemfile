  gem 'sqlite3'
  gem 'pry-debugger'
  gem 'awesome_print'
  gem 'rspec-rails'
  gem 'mocha'
  gem 'factory_girl_rails', '~> 4.0'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end


